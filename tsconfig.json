{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/app/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/app/lib/*": ["./src/lib/*"],
      "@/utils/*": ["./src/lib/utils/*"],
      "@/ui/*": ["./src/app/components/ui/*"],
      "@/hooks/*": ["./src/app/hooks/*"]
    },
    "types": ["vitest/globals", "node"]
  },
  "include": [
    "testSetup.ts",
    "types/next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".github/workflows/auth.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
