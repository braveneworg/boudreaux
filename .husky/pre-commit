#!/bin/sh

# Type checking
echo "ğŸ” Running type check..."
npx tsc --noEmit
if [ $? -ne 0 ]; then
  echo "âŒ Type check failed. Please fix TypeScript errors before committing."
  exit 1
fi
echo "âœ… Type check passed"

# Linting staged files
echo "ğŸ” Running lint-staged..."
npx lint-staged
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed. Please fix lint errors before committing."
  exit 1
fi
echo "âœ… Linting passed"

# Run tests related to changed files
echo "ğŸ§ª Running tests for changed files..."
CHANGED_FILES=$(git diff --cached --name-only --diff-filter=ACMR | grep -E '\.(ts|tsx)$' | grep -v '\.spec\.' | grep -v '\.test\.' | tr '\n' ' ')
if [ -n "$CHANGED_FILES" ]; then
  npx vitest run --related $CHANGED_FILES
  if [ $? -ne 0 ]; then
    echo "âŒ Tests failed. Please fix failing tests before committing."
    exit 1
  fi
  echo "âœ… Related tests passed"
else
  echo "â„¹ï¸  No source files changed, skipping tests"
fi

echo "ğŸ‰ Pre-commit checks complete!"
