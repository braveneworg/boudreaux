#!/bin/sh

echo "ğŸ” Running TypeScript type-check before push..."

# Run TypeScript type-check on the entire project
npx tsc --noEmit

if [ $? -ne 0 ]; then
  echo ""
  echo "âŒ TypeScript type-check failed. Please fix type errors before pushing."
  echo "   Run 'npx tsc --noEmit' to see all errors."
  exit 1
fi

echo "âœ… TypeScript type-check passed"

echo ""
echo "ğŸ” Running ESLint before push..."

# Run ESLint with max-warnings 0 to fail on any warnings
npm run lint -- --max-warnings 0

if [ $? -ne 0 ]; then
  echo ""
  echo "âŒ ESLint found errors or warnings. Please fix them before pushing."
  echo "   Run 'npm run lint' to see all issues."
  exit 1
fi

echo "âœ… ESLint passed"

echo ""
echo "ğŸ§ª Running tests before push..."

# Run tests excluding the unrelated failing SSR test
npm run test:run -- --exclude src/app/components/ui/sticky-breadcrumb-wrapper.spec.tsx

if [ $? -ne 0 ]; then
  echo ""
  echo "âŒ Tests failed. Please fix failing tests before pushing."
  echo "   Run 'npm run test' to see all failures."
  exit 1
fi

echo "âœ… All tests passed"
echo "ğŸš€ Pushing changes..."
